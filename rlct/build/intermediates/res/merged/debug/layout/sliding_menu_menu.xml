            android:layout_height="@dimen/base55dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/base50dp" >

            <ImageView
                android:id="@+id/ic_my_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/my_data"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_my_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/base15dp"
                android:layout_toRightOf="@id/ic_my_data"
                android:text="@string/menu_my_data"
                android:textColor="#ffffff"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/base30dp"
                android:background="@drawable/arrow"
                android:scaleType="fitXY" />
        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/base1dp"
            android:background="#364555" />

        <RelativeLayout
            android:id="@+id/account_security"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base55dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/base50dp" >

