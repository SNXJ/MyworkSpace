                android:layout_toRightOf="@id/ic_account_security"
                android:text="@string/menu_account_security"
                android:textColor="#ffffff"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/base30dp"
                android:background="@drawable/arrow"
                android:scaleType="fitXY" />
        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/base1dp"
            android:background="#364555" />

        <RelativeLayout
            android:id="@+id/deal_record"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base55dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/base50dp" >

            <ImageView
                android:id="@+id/ic_deal_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
