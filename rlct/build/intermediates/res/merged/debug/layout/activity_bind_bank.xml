<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_bind_bank"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/base50dp"
        android:background="@color/title_blue" >

        <ImageButton
            android:id="@+id/ib_bind_bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/base15dp"
            android:background="@drawable/left_return" />

        <TextView
            android:id="@+id/tv_bind_bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/bind_bank"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:paddingLeft="@dimen/base40dp"
        android:paddingRight="@dimen/base40dp"
        android:paddingTop="@dimen/base60dp" >

        <RelativeLayout
            android:id="@+id/rl_bank_card"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base50dp"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/ic_bank_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_bank_card"
                android:scaleType="fitXY" />

            <EditText
                android:id="@+id/et_bank_card"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:inputType="number"
                android:layout_marginLeft="@dimen/base15dp"
                android:layout_toRightOf="@+id/ic_bank_card"
                android:background="@android:color/white"
                android:hint="@string/bank_card"
                android:textColor="#999999"
                android:maxLength="19"
                android:textSize="15sp" />
        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/base1dp"
            android:background="#cccccc" />

        <RelativeLayout
            android:id="@+id/rl_bank_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base50dp"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/ic_bank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_bank_name"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_bank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/base15dp"
                android:layout_toRightOf="@id/ic_bank_name"
                android:background="@android:color/white"
                android:hint="@string/bank_name"
                android:inputType="number"
                android:textColor="#999999"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_bank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/arrow"
                android:padding="@dimen/base5dp"
                android:scaleType="fitXY" />
        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/base1dp"
            android:background="#cccccc" />

        <RelativeLayout
            android:id="@+id/rl_regist_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base50dp"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/ic_bank_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/password"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_bank_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/base15dp"
                android:layout_toRightOf="@id/ic_bank_city"
                android:background="@android:color/white"
                android:hint="@string/bank_city"
                android:textColor="#999999"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_bank_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/arrow"
                android:padding="@dimen/base5dp"
                android:scaleType="fitXY" />
        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/base1dp"
            android:background="#cccccc" />

        <ImageButton
            android:id="@+id/ib_bind_bank_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/base50dp"
            android:background="@drawable/bind_bank_confirm" />
    </LinearLayout>

</LinearLayout><!-- From: file:/E:/ronglian/rlct/rlct/res/layout/activity_bind_bank.xml -->