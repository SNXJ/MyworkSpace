<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/base135dp"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/base70dp"
        android:layout_marginLeft="@dimen/base20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_repayment_history_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第一期（2015年7月5日）"
            android:textColor="@color/text_zhong"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_repayment_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/repayment_error" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base75dp"
        android:layout_marginLeft="@dimen/base20dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/rl_capital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_capital_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本金"
                android:textColor="@color/text_xiao"
                android:textSize="11sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/base19dp"
                android:layout_below="@+id/tv_capital_text" >

                <TextView
                    android:id="@+id/tv_capital1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:typeface="sans"
                    android:textStyle="bold"
                    android:text="20,000"
                    android:textColor="@color/text_red"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_capital2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/tv_capital1"
                    android:typeface="sans"
                    android:textStyle="bold"
                    android:text=".00元"
                    android:textColor="@color/text_red"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/base2dp"
                    android:layout_marginLeft="@dimen/base5dp"
                    android:layout_toRightOf="@+id/tv_capital2"
                    android:background="@drawable/add" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_interests_server"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base5dp" >

            <TextView
                android:id="@+id/tv_interests_server_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="利息加服务费"
                android:textColor="@color/text_xiao"
                android:textSize="11sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/base19dp"
                android:layout_below="@+id/tv_interests_server_text" >

                <TextView
                    android:id="@+id/tv_interests_server1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:typeface="sans"
                     android:textStyle="bold"
                    android:text="2,000"
                    android:textColor="@color/text_red"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_interests_server2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/tv_interests_server1"
                     android:typeface="sans"
                     android:textStyle="bold"
                    android:text=".30元"
                    android:textColor="@color/text_red"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/base5dp"
                    android:layout_toRightOf="@+id/tv_interests_server2"
                    android:background="@drawable/reduction" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_total_repayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base5dp" >

            <TextView
                android:id="@+id/tv_total_repayment_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共计还息"
                android:textColor="@color/text_xiao"
                android:textSize="11sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_below="@+id/tv_total_repayment_text" >

                <TextView
                    android:id="@+id/tv_total_repayment1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:typeface="sans"
                    android:text="22,000"
                    android:textStyle="bold"
                    android:textColor="@color/text_red"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_total_repayment2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/tv_total_repayment1"
                     android:typeface="sans"
                     android:textStyle="bold"
                    android:text=".30元"
                    android:textColor="@color/text_red"
                    android:textSize="13sp" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout><!-- From: file:/E:/ronglian/rlct/rlct/res/layout/repayment_history_item.xml -->