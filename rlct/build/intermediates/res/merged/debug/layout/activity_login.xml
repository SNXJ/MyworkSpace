<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_title_regist"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/base50dp"
        android:background="@color/title_blue" >

        <ImageButton
            android:id="@+id/ib_login_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/base15dp"
            android:background="@drawable/left_return" />

        <TextView
            android:id="@+id/tv_login_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/login"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_login_regist"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/base15dp"
            android:text="@string/regist"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:paddingLeft="@dimen/base40dp"
        android:paddingRight="@dimen/base40dp"
        android:paddingTop="@dimen/base40dp" >

        <RelativeLayout
            android:id="@+id/rl_name_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base50dp"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/ic_user_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/user_login"
                android:scaleType="fitXY" />

            <EditText
                android:id="@+id/et_user_login"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/base15dp"
                android:layout_toRightOf="@+id/ic_user_login"
                android:background="@android:color/white"
                android:hint="@string/phone_number"
                android:textColor="#999999"
                android:textSize="15sp" />
        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/base1dp"
            android:background="#cccccc" />

        <RelativeLayout
            android:id="@+id/rl_login_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base50dp"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/ic_login_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/password"
                android:scaleType="fitXY" />

            <EditText
                android:id="@+id/et_login_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/base15dp"
                android:layout_toRightOf="@id/ic_login_password"
                android:background="@android:color/white"
                android:hint="@string/regist_password"
                android:textColor="#999999"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/base8dp"
                android:background="@drawable/password_eyes" />
        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/base1dp"
            android:background="#cccccc" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base20dp" >

            <TextView
                android:id="@+id/tv_forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:text="忘记密码？"
                android:textColor="#54B7FA"
                android:textSize="11sp" />
        </RelativeLayout>

        <ImageButton
            android:id="@+id/ib_login_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/base40dp"
            android:background="@drawable/login" />
    </LinearLayout>

</LinearLayout><!-- From: file:/E:/ronglian/rlct/rlct/res/layout/activity_login.xml -->