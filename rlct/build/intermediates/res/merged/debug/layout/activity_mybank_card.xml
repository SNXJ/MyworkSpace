<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_title_share"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/base50dp"
        android:background="@color/title_blue" >

        <ImageButton
            android:id="@+id/ib_mybank_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/base15dp"
            android:background="@drawable/left_return" />

        <TextView
            android:id="@+id/tv_mybank_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/mybank"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base55dp"
        android:layout_marginTop="@dimen/base40dp"
        android:background="#ffffff"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/iv_logo_bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/base20dp"
            android:background="@drawable/logo_gs" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/base10dp"
            android:layout_toRightOf="@+id/iv_logo_bank"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/tv_my_bind_bank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中国工商银行"
                android:textColor="@color/text_zhong"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_my_bind_bank_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_my_bind_bank"
                android:text="尾号8989 储蓄卡"
                android:textColor="@color/text_xiao"
                android:textSize="11sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_check_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/base15dp"
            android:background="@drawable/check_successful" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/base30dp"
        android:textSize="11sp"
        android:textColor="@color/red"
        android:text="@string/mybank_card" />

</LinearLayout><!-- From: file:/E:/ronglian/rlct/rlct/res/layout/activity_mybank_card.xml -->