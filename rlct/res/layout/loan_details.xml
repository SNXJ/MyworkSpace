<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_details"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/base24dp"
    android:layout_marginRight="@dimen/base24dp" >

    <LinearLayout
        android:id="@+id/ll_loan_details"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base55dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="贷款进度"
            android:textColor="#666666"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_loan_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详情"
            android:textColor="#666666"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/arrow" />
    </LinearLayout>

    <View
        android:id="@+id/detiles_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base1dp"
        android:layout_below="@+id/ll_loan_details"
        android:background="#efeff4" />

    <LinearLayout
        android:id="@+id/ll_loan_detiles"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/detiles_line"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/rl_commit"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/detiles_line" >

            <LinearLayout
                android:id="@+id/ll_commit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/base10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_commit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/base10dp"
                    android:text="申请提交"
                    android:textColor="#999999"
                    android:textSize="11sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_commit"
                    android:background="@drawable/rect_gray"
                    android:padding="@dimen/base3dp"
                    android:text=" 12个月  "
                    android:textColor="#0099ff"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_loan_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_commit"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_commit_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/base10dp"
                    android:text="260.00"
                    android:textColor="#666666"
                    android:textSize="33sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="万"
                    android:textColor="#666666"
                    android:textSize="15sp"
                    android:typeface="sans" />
            </LinearLayout>

            <View
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/base1dp"
                android:layout_height="@dimen/base45dp"
                android:layout_marginTop="@dimen/base8dp"
                android:background="#efeff4" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_pass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_loan_details"
            android:layout_marginLeft="@dimen/base10dp"
            android:layout_toRightOf="@+id/rl_commit"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/ll_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/base10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/base10dp"
                    android:text="审核通过"
                    android:textColor="#999999"
                    android:textSize="11sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_commit"
                    android:background="@drawable/rect_gray"
                    android:padding="@dimen/base3dp"
                    android:text=" 10个月  "
                    android:textColor="#0099ff"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_check"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_check_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/base10dp"
                    android:text="200.00"
                    android:textColor="#ff6666"
                    android:textSize="33sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="万"
                    android:textColor="#ff6666"
                    android:textSize="15sp"
                    android:typeface="sans" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_time_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_loan_detiles"
        android:layout_marginTop="@dimen/base30dp"
        android:background="@drawable/timeline_2" />

</RelativeLayout>